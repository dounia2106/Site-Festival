
{% extends 'base.html.twig' %}

{% block stylesheets %} 
<style>

body {
    margin: auto;
  overflow: auto;
  background-size: 400% 400%;
  background-attachment: fixed;
  background: radial-gradient(4rem,
    rgba(255,255,255,0) 80%, 
    #778691 80%, #778691 99%, 
    rgba(255,255,255, 0) 
    ) 0 0,
    radial-gradient(4rem,
    rgba(255,255,255,0) 80%, 
    #778691 80%, #778691 99%,  
    rgba(255,255,255, 0) 
    ) 4em 4em,
    radial-gradient(4.7rem,
    rgba(255,255,255,0) 50%, 
    #B1C2B3 50%,
    #B1C2B3 75%, #B1C2B3 99%, 
    rgba(255,255,255, 0) 
    ) 4em 4em,
    radial-gradient(4.7rem,
    rgba(255,255,255,0) 50%, 
    #B1C2B3 50%,
    #F5FCD0 75%, #B1C2B3 99%, 
    rgba(255,255,255, 0) 
    ) 0 0;
  background-size: 8rem 8rem;
  background-color: #F5FCD0;
}
button{
 background-color: opacity;
  border: none;
  color: white;
  padding: 10px 12px;
  text-align: center;
  text-decoration: none;
  font-size: 11px;
  cursor: pointer;
  display:inline-block;
	width:50%;
	margin:10px 2.5% 10px 2.5%;
 
    
	
}


button.Create{
background-color:white;
padding: 10px 12px;
font-size: 15px;
cursor: pointer;
width:10%;
margin-left:70%;
right: 0;
position: absolute;
top: 50%;
}
button.Create::after {
  content: "";
  background-color: #2F4F4F;
  width: 100%;
  z-index: -1;
  position: absolute;
  height: 100%;
  top: 7px;
  left: 7px;
}

@keyframes gradient {
    0% {
        background-position: 0% 0%;
    }
    50% {
        background-position: 100% 100%;
    }
    100% {
        background-position: 0% 0%;
    }
}



.table {
	position:relative;
	top: 50%;
	left: 50%;
	transform: translate(-50%, -50%);
    line-height: 1em;
  
}
@keyframes glissement {
    from {
      margin-left: 80%;
      width: 300%;
    }

    to {
      margin-left: 0%;
      width: 100%;
    }
  }
h1{
 text-shadow:0 0 2px #A0C3D2,0 0 30px  #A0C3D2,0px 0px 5px  #A0C3D2, 0 0 150px  #A0C3D2;color:#2F4F4F;
background-color:#2F4F4F;
 font-family: 'Oswald', sans-serif;
 font-style: italic;
text-decoration: underline;
 text-align:center;
 animation-duration: 4s;
  animation-delay: 2s;
  animation-name: glissement;
  animation-iteration-count: infinite;
}

.table {
	width: 800px;
	border-collapse: collapse;
	overflow: hidden; 
	box-shadow: 0 0 20px rgba(0,0,0,0.1);
    top: 300px;
}

th,
td {
	padding: 15px;
	background-color: rgba(255,255,255,0.6);
	color: black;
}

th {
	text-align: left;
    text-decoration: underline;
}
}

thead {
	th {
		background-color: #55608f;
	}
}

.container {
 margin: 0 auto;
max-width: 1000px;

}
.navigation {
  width: 100%;
  height: 80px;
  padding: 10px 0;
  background-image: linear-gradient(-90deg, #fff, #eee);
  box-shadow: 1px 1px 20px rgba(0, 0, 0, 0.3);
  webkittransition: all .8s; /* Safari prior 6.1 */
  transition: all .8s;
  
  
}
.logo {
  color:black;
  width: 20%;
  float: left;
  line-height: 50px;
 font-family: cursive;
 
}
.navigation-links {
  text-align: right;
  padding: 0;
}
.navigation-links li {
  color: black;
  display: inline-block;
  padding: 10px 20px;
  border-radius: 20px;
  -webkit-transition: all .8s; /* Safari prior 6.1 */
  transition: all .8s;
}

.navigation-links li.active {
  
  background-color: rgba(	83, 173, 203, .3);

}

.navigation-links a {
  
  text-decoration: none;

}

.navigation-links li:hover {
  background-color: rgba(	83, 173, 203, 1);
  color: #fff;
  cursor: pointer;
 
  
}
.icon {
  display: none;
  padding: 20px;
  border-radius: 50%;
  
 
}

@media screen and (max-width: 600px) {
  .container {
    margin: 0 auto;
    max-width: 600px;
  }
  .logo {
    width: 100%;
    padding: 0 20px;
   
  }
  
  .navigation-links li {display: none;
   text-decoration: none;
  }
  .navigation-links a.icon {
    float: right;
    display: block;
    position: absolute;
    right: 20px;
    top: 40px;
    text-decoration: none;
  }
  .navigation.responsive .navigation-links a.icon {
    background-color: rgba(	83, 173, 203, 1);
    color: #fff;
    cursor: pointer;
   
    
  }
  
  .navigation.responsive {
    position: relative;
    height: 200px;
  }
  .navigation.responsive .navigation-links li {
    float: none;
    display: block;
    text-align: left;
      -webkit-transition: all .8s; /* Safari prior 6.1 */
  transition: all .8s;
  }

}


</style>
{% endblock %}


